# ========================================
# LinguaFlow 环境配置
# ========================================

# ----------------------------------------
# 数据同步配置
# ----------------------------------------

# 是否启用后端同步（开发阶段设为 false，生产阶段设为 true）
NEXT_PUBLIC_ENABLE_BACKEND_SYNC=false

# 同步间隔（毫秒，默认 30000 = 30秒）
NEXT_PUBLIC_SYNC_INTERVAL=30000

# 冲突解决策略：local-first | remote-first | latest-wins
NEXT_PUBLIC_CONFLICT_RESOLUTION=latest-wins

# ----------------------------------------
# Supabase 配置（生产环境必填）
# ----------------------------------------

# Supabase 项目 URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase 匿名密钥
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ----------------------------------------
# OpenAI 配置（用于 AI 功能）
# ----------------------------------------

# OpenAI API 密钥
OPENAI_API_KEY=your_openai_api_key

# ----------------------------------------
# 应用配置
# ----------------------------------------

# 应用 URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 环境：development | production
NODE_ENV=development
